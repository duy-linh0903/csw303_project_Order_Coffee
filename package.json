{
  "name": "coffee-cabin",
  "version": "1.0.0",
  "description": "Modern coffee ordering system with member card tiers",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=index.html",
    "dev": "live-server --port=3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "coffee",
    "ordering-system",
    "ecommerce",
    "member-card",
    "loyalty-program"
  ],
  "author": "Duy Linh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/duy-linh0903/csw303_project_Order_Coffee.git"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
